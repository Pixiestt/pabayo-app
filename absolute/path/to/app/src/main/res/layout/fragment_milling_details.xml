<!-- Inside RadioGroup -->
<RadioGroup
    android:id="@+id/radioGroupMilling"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Milling for Fee Option -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMillingForFee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <RadioButton
                android:id="@+id/rbMillingForFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:text="$"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary_green"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Milling for a fee"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Remove this entire CardView and its contents -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMillingForRiceConversion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">
    
            <RadioButton
                android:id="@+id/rbMillingForRiceConversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp" />
    
            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:text="ðŸŒ¾"
                android:textSize="20sp"
                android:gravity="center" />
    
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Milling for rice conversion"
                android:textSize="16sp"
                android:textStyle="bold" />
    
        </LinearLayout>
    
    </androidx.cardview.widget.CardView>
</RadioGroup>