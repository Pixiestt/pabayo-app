<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Capstone" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary branding colors -->
        <item name="colorPrimary">@color/primary_main</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <!-- Secondary / accent -->
        <item name="colorSecondary">@color/secondary_main</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Background and surface -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/card_background</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/dark_text</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Status bar color (works on Lollipop+) -->
        <item name="android:statusBarColor">@color/primary_dark</item>

        <!-- Use primary as default accent for ripple/controls where Material uses colorControlActivated -->
        <item name="colorControlActivated">@color/primary_main</item>

        <!-- App-wide window background (uses wrapper drawable to scale/crop the JPEG) -->
        <item name="android:windowBackground">@drawable/bg_rice</item>
    </style>

    <style name="Theme.Capstone" parent="Base.Theme.Capstone" />
</resources>