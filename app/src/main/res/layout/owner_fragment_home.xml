<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".owner.OwnerMainActivity">

    <TextView
        android:id="@+id/homeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Centered vertical group with the four buttons (MaterialButton styled) -->
    <LinearLayout
        android:id="@+id/centerButtonGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/homeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewRequests"
            style="?attr/materialButtonStyle"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="@string/btn_view_requests"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="15dp"
            app:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpdateStatus"
            style="?attr/materialButtonStyle"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="@string/title_track"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="15dp"
            app:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewHistory"
            style="?attr/materialButtonStyle"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="@string/btn_view_history"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="15dp"
            app:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <!-- FrameLayout around the messages button so we can overlay a badge -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewMessages"
                style="?attr/materialButtonStyle"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:text="@string/btn_view_messages"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="15dp"
                app:backgroundTint="?attr/colorPrimary"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvMessagesBadge"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end|top"
                android:layout_marginTop="-6dp"
                android:layout_marginEnd="-6dp"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/messages_badge_zero"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:background="@drawable/badge_background" />

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>