<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvDetailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/request_details_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvDetailCustomerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_customer"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvDetailSackQty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_sacks"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvDetailServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_services"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvDetailSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_schedule"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvDetailPickupLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_pickup_location"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvDetailDeliveryLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_delivery_location"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvDetailComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_comment"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvDetailSubmittedAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_submitted_at"
            android:layout_marginTop="8dp" />

        <!-- Contact row: visible when contact info is known or loading -->
        <TextView
            android:id="@+id/tvDetailContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contact_number_loading"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:textStyle="bold" />

        <!-- small row of action buttons related to contact -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_call"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnCopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copy_debug"
                android:layout_marginStart="8dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_message"
                android:layout_marginStart="8dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnViewProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_view_profile"
                android:layout_marginStart="8dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Progress label and bar -->
        <TextView
            android:id="@+id/tvDetailProgressLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_progress"
            android:layout_marginTop="12dp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBarRequest"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="0"
            android:indeterminate="false"
            android:layout_marginTop="8dp" />

        <!-- Edit button (visible only when allowed) -->
        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_edit"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/close"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
