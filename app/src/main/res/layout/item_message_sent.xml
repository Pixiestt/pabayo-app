<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <!-- Left placeholder column reduced so bubbles move left but still avoid overlapping the title area -->
    <View
        android:id="@+id/leftPlaceholder"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" />

    <!-- Bubble anchored to parent's end -->
    <LinearLayout
        android:id="@+id/messageBubbleSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_message_sent"
        android:maxWidth="280dp"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMessageSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvTimeSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="11sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</RelativeLayout>
